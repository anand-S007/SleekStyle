            <script>


                // Add product to wishlist
                async function addToWishlist(productId, index) {
                    const wishlistHeartId = document.getElementById(`wishlistHeartId_${index}`)

                    const response = await fetch('/wishlist', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId })
                    })
                    // if(response.status == 200){
                    //     window.location.href = '/login'
                    // }
                    const data = await response.json()
                    if (data.success) {
                        // wishlistHeartId.style.display = 'none'
                        const Toast = Swal.mixin({
                            toast: true,
                            position: "bottom",
                            showConfirmButton: false,
                            timer: 1800,
                            timerProgressBar: false,
                        });
                        Toast.fire({
                            icon: "success",
                            title: "Product added to wishlist"
                        })
                    } else {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: "bottom",
                            showConfirmButton: false,
                            timer: 1800,
                            timerProgressBar: false,
                        });
                        Toast.fire({
                            icon: "warning",
                            title: data.message
                        })
                    }
                }
