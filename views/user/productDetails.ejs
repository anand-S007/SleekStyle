        <script>
            let selectedSize = ''
            const addtocartId = document.getElementById('addtocart_id')
            const sizeSelectErr = document.getElementById('sizeErr')
            const goToCart = document.getElementById('goToCart')
            const outStock = document.getElementById('out-stock')

            async function selectSize(size, productId) {
                try {
                    selectedSize = size
                    const response = await fetch(`/product/sizeSelect?size=${size}&productId=${productId}`, { method: 'GET', })
                    const data = await response.json()
                    if (data.emptyStock == true) {
                        addtocartId.style.display = 'none'
                        outStock.style.display = 'inline-block'
                    }
                    else if (data.emptyStock == false) {
                        outStock.style.display = 'none'
                        addtocartId.style.display = 'block'
                    }
                    else {
                        console.log('error while adding product to cart in fetch ');
                    }
                } catch (error) {
                    console.log(error);
                }
            }
            async function addtoCart(productId, price, userId) {
                try {
                    if (userId == 0) {
                        window.location.href = '/login'
                    } else {
                        if (selectedSize == '') {
                            sizeSelectErr.style.display = 'block'
                            sizeSelectErr.innerText = 'Please select Size'
                        } else {
                            sizeSelectErr.style.display = 'none'
                            await fetch(`/addToCart?size=${selectedSize}&price=${price}&userId=${userId}&productId=${productId}`, {
                                method: 'get'
                            }).then((res) => {
                                return res.json()
                            }).then((res) => {
                                console.log(res);
                                if (res.success) {
                                    // addtocartId.style.display = 'none'
                                    // goToCart.style.display = 'block'
                                    Swal.fire({
                                        title: "Successfull!",
                                        text: "Product added to cart!",
                                        icon: "success"
                                    }).then((res) => {
                                        window.location.href = '/viewcart'
                                    })
                                } else if (res.proInCart) {
                                    Swal.fire({
                                        title: "Failed!",
                                        text: "Item is already in cart! Visit cart",
                                        icon: "error"
                                    });
                                } else {
                                    console.log('error while click on add to cart and data is not added ');
                                }
                            })
                        }
                    }
                } catch (error) {
                    console.log('error found while clicking on addto cart', error);
                }
            }
        
           // Add to wishlist
            async function addToWishlist(productId){

            const response = await fetch('/wishlist',{
                method:'POST',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({productId})
            })
            // if(response.status == 200){
            //     window.location.href = '/login'
            // }
            const data = await response.json()
            if(data.success){
                const Toast = Swal.mixin({
                                    toast: true,
                                    position: "bottom",
                                    showConfirmButton: false,
                                    timer: 1800,
                                    timerProgressBar: false,
                                });
                                Toast.fire({
                                    icon: "success",
                                    title: "Product added to wishlist"
                                })
            }else{
                const Toast = Swal.mixin({
                                    toast: true,
                                    position: "bottom",
                                    showConfirmButton: false,
                                    timer: 1800,
                                    timerProgressBar: false,
                                });
                                Toast.fire({
                                    icon: "warning",
                                    title: data.message
                                })
            }
        }
            
        </script>

