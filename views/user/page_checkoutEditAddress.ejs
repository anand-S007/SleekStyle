<script>
    //Onclick edit button 
async function editBtn(e,addressId){
    e.preventDefault()
    nameValidate()
    mobileValidate()
    pincodeValidate()
    localityValidate()
    addressValidate()
    districtValidate()
    stateValidate()
    if(nameErr.style.display =='block'||
        mobileErr.style.display =='block'||
        pincodeErr.style.display =='block'||
        localityErr.style.display =='block'||
        addressErr.style.display =='block'||
        districtErr.style.display =='block'||
        stateErr.style.display =='block'){
            return
    }

        const form = document.getElementById('form')
        const formData = new FormData(form)
        const jsonFormData = {}
        formData.forEach((value,key)=>{
            jsonFormData[key] = value
        })
        let dataToSend = {...jsonFormData,addressId}
        await fetch(`/checkout/edit_address`,{
            method:'PUT',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify(dataToSend)
        })
        .then((res)=>{
            return res.json()
        })
        .then((res)=>{
            console.log(res);
            if(res.success == true){
                Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, update it!"
                    }).then((result) => {
                        console.log(result);
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Updated!",
                            text: "Address has been updated.",
                            icon: "success",
                            showConfirmButton:true,
                        })
                        .then((result)=>{
                            if(result.isConfirmed){
                                window.location.href = '/checkout'
                            }
                        })
                    }
                })
            }else{
                console.log('error while saving user delivery address');
            }
        })
        .catch((err)=>{
            console.log(err);
        })
    }
   </script>


