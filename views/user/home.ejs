    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/public/userAssets/assets/imgs/theme/sleek-style-logo.png">
    <!-- Template CSS -->
    <link rel="stylesheet" href="/public/userAssets/assets/css/maind134.css?v=3.4">
