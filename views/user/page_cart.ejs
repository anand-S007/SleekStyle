</head>

<body>
    <%-include('header')-%>

        <main class="main">
            <div class="page-header breadcrumb-wrap">
                <div class="container">
                    <div class="breadcrumb">
                        <a href="/" rel="nofollow">Home</a>
                        <span></span> <a href="/shop">Shop</a>
                        <span></span> Your Cart
                    </div>
                </div>
            </div>
            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table shopping-summery text-center clean">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Size</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <% if(cartData){ %>
                                    <tbody>
                                            <% cartData.items.forEach((item,i)=>{ %>
                                                <tr>
                                                    <td class="image product-thumbnail"><img
                                                            src="/uploads/<%=item.productId.image[0] %>" alt="#"></td>
                                                    <td class="product-des product-name">
                                                        <h5 class="product-name"><a href="shop-product-right.html">
                                                                <%=item.productId.title %>
                                                            </a></h5>
                                                        <p class="font-xs">Maboriosam in
                                                            a tonto nesciung eget<br>
                                                            distingy magndapibus.
                                                        </p>
                                                    </td>
                                                    <td><span id="price_id<%=i %>">
                                                            <%=item.size %>
                                                        </span></td>
                                                    <td class="price" data-title="Price">Rs<span id="price_id<%=i %>">
                                                            <%=item.price %>
                                                        </span></td>
                                                    <td class="text-center" data-title="Stock">
                                                        <div
                                                            class="detail-qty border radius d-flex justify-content-center  m-auto">
                                                            <button id="qtyInc_id<%=i %>" type="button"
                                                                onclick="qtycount('<%= i %>','<%= item.productId._id %>','<%= cartData._id %>','<%= cartData.totalPrice %>','<%=item.size%>','decrease')"
                                                                class="qtyBtn">-</button>
                                                            <span id="qtyVal_id<%=i %>">
                                                                <%=item.quantity %>
                                                            </span>
                                                            <button type="button" id="qtyDec_id<%= i %>"
                                                                onclick="qtycount('<%= i %>','<%= item.productId._id %>','<%= cartData._id %>','<%= cartData.totalPrice %>','<%=item.size%>','increase')"
                                                                class="qtyBtn">+</button>
                                                        </div>
                                                    </td>
                                                    <td class="text-right" data-title="Cart">
                                                        Rs <span id="subTotalPrice_id<%=i %>">
                                                            <%=item.subTotalPrice %>
                                                        </span>
                                                    </td>
                                                    <td class="action" data-title="Remove">
                                                        <buttona type="button"
                                                            onclick="itemDelete('<%= item._id %>','<%=cartData._id%>')"
                                                            class="text-muted qtyBtn"><i
                                                                class="fi-rs-trash"></i></button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                            <% }%>
                                </table>
                                <% if(!cartData){ %>
                                    <hr>
                                    <h4 class="d-flex justify-content-center">CART IS EMPTY!</h4>
                                    <% } %>
                            </div>
                            <div class="cart-action text-end">
                                <!-- <a class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update
                                    Cart</a> -->
                                <a href="/shop" class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue
                                    Shopping</a>
                            </div>
                            <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                            <div class="row mb-50">
                                <div class="col-lg-6 col-md-12">

                                    <!-- <div class="mb-30 mt-50">
                                        <div class="heading_s1 mb-3">
                                            <h4>Apply Coupon</h4>
                                        </div>
                                        <div class="total-amount">
                                            <div class="left">
                                                <div class="coupon">
                                                    <form action="#" target="_blank">
                                                        <div class="form-row row justify-content-center">
                                                            <div class="form-group col-lg-6">
                                                                <input class="font-medium" name="Coupon"
                                                                    placeholder="Enter Your Coupon">
                                                            </div>
                                                            <div class="form-group col-lg-6">
                                                                <button class="btn  btn-sm"><i
                                                                        class="fi-rs-label mr-10"></i>Apply</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div> -->
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="border p-md-4 p-30 border-radius cart-totals">
                                        <div class="heading_s1 mb-3">
                                            <h4>Cart Totals</h4>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="cart_total_label">Cart
                                                            Subtotal</td>
                                                        <td class="cart_total_amount"><span
                                                                class="font-lg fw-900 text-brand">Rs
                                                                <%=cartData &&
                                                                    cartData.totalPrice?cartData.totalPrice:0%>
                                                            </span></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Shipping</td>
                                                        <td class="cart_total_amount">
                                                            <i class="ti-gift mr-5"></i>
                                                            Free
                                                            Shipping
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cart_total_label">Total</td>
                                                        <td class="cart_total_amount"><strong><span id="totalPrice_id"
                                                                    class="font-xl fw-900 text-brand">Rs
                                                                    <%=cartData &&
                                                                        cartData.totalPrice?cartData.totalPrice:0%>
                                                                </span></strong>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <a class="btn" onclick="proceedToCheckOut()"> <i
                                                class="fi-rs-box-alt mr-10"></i>

                                            Proceed To
                                            CheckOut</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!-- Footer -->
        <%-include('footer')%>
        <!-- Preloader Start -->
        <div id="preloader-active">
            <div class="preloader d-flex align-items-center justify-content-center">
                <div class="preloader-inner position-relative">
                    <div class="text-center">
                        <h5 class="mb-5">Now Loading</h5>
                        <div class="loader">
                            <div class="bar bar1"></div>
                            <div class="bar bar2"></div>
                            <div class="bar bar3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // product quantity increase and decrease
            async function qtycount(i, productId, cartId, totalPrice, size, incOrDec) {
                let subTotalPriceId = document.getElementById('subTotalPrice_id' + i)
                let totalPriceId = document.getElementById('totalPrice_id')
                let qtyValId = document.getElementById('qtyVal_id' + i)
                let qtyVal = parseFloat(qtyValId.innerText)
                console.log(qtyVal, size, totalPrice, productId, cartId);
                if (incOrDec == 'increase') {
                    await fetch(`/viewcart/qtyInc`, {
                        method: 'POST',
                        headers: {
                            "Content-Type": 'application/json'
                        },
                        body: JSON.stringify({ size, productId, cartId })
                    })
                        .then((res) => {
                            return res.json()
                        })
                        .then((res) => {
                            console.log(res);
                            if (res.success) {
                                qtyValId.innerHTML = res.qty
                                subTotalPriceId.innerHTML = res.subTotalPrice
                                totalPriceId.innerHTML = res.totalPrice
                            } else if (res.outOfStock) {
                                window.alert(res.outOfStock)
                            } else if (res.limit) {
                                Swal.fire(res.limit);
                            }else if(res.error2){
                                const Toast = Swal.mixin({
                                    toast: true,
                                    position: 'centre',
                                    iconColor: 'red',
                                    customClass: {
                                        popup: 'colored-toast',
                                    },
                                    showConfirmButton: false,
                                    timer: 1900,
                                    timerProgressBar: false,
                                })
                                Toast.fire({
                                    icon: 'warning',
                                    title: 'Product stock limit exceeded!',
                                })
                            }else{
                                window.aler(res)
                            }
                        })
                }
                else {
                    await fetch(`/viewcart/qtyDec`, {
                        method: 'POST',
                        headers: {
                            "Content-Type": 'application/json'
                        },
                        body: JSON.stringify({ qtyVal, size, totalPrice, productId, cartId })
                    })
                        .then((res) => {
                            return res.json()
                        })
                        .then((res) => {
                            console.log(res);
                            if (res.success) {
                                qtyValId.innerHTML = res.qty
                                subTotalPriceId.innerHTML = res.subTotalPrice
                                totalPriceId.innerHTML = res.totalPrice
                            } else if (res.outOfStock) {
                                window.alert(res.outOfStock)
                            } else if (res.limit) {
                                Swal.fire(res.limit);
                            }else if(res.error2){
                                const Toast = Swal.mixin({
                                    toast: true,
                                    position: 'centre',
                                    iconColor: 'red',
                                    customClass: {
                                        popup: 'colored-toast',
                                    },
                                    showConfirmButton: false,
                                    timer: 1900,
                                    timerProgressBar: false,
                                })
                                Toast.fire({
                                    icon: 'warning',
                                    title: 'Product stock limit exceeded!',
                                }).then((res)=>{
                                    window.location.href = '/viewcart'
                                })
                            }else{
                                window.aler(res)
                            }
                        })
                }
            }

            // product delete from cart
            async function itemDelete(cartProId, cartId) {
                try {
                    console.log('cartProId:', cartProId, 'cartId', cartId);
                    await fetch('/viewcart/productDelete', {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ cartProId, cartId })
                    }).then((res) => {
                        return res.json()
                    }).then((res) => {
                        if (res.success) {
                            Swal.fire({
                                title: "Deleted!",
                                text: "Product deleted from cart!",
                                icon: "success"
                            }).then((res) => {
                                window.location.href = '/viewcart'
                            })
                        }
                    })

                } catch (error) {
                    console.log(error);
                }
            }

            async function proceedToCheckOut(){
                try {
                    fetch('/check_dataInCart')
                    .then(res=>res.json())
                    .then((res)=>{
                        console.log(res);
                        console.log(res);
                        if(res.success){
                            window.location.href = '/checkout'
                        }else{
                            Swal.fire(res.message);
                        }
                    })
                } catch (error) {
                    console.log(error);
                }
            }
        </script>

