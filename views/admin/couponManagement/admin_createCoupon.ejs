                        <div class="col-9">
                            <div class="content-header">
                                <h2 class="content-title">Create coupon</h2>
                                
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Details</h4>
                                </div>
                                <form method="post" action="/admin/createCoupon" id="productForm">
                                <div class="card-body">
                                    
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Coupon Code</label>
                                        <input type="text" placeholder="Type here" class="form-control"
                                            id="product_name" name="productName">
                                        <p>
                                        <div style="display: none;" id="nameError" class="text-danger"></div>
