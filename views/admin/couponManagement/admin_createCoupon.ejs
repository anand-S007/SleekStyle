        <script>
            // discount percentage limit
            async function digitLimit(element) {
                try {
                    if (element.value.length > 3) {
                        element.value = element.value.slice(0, 3)
                    }
                    if (parseInt(element.value) > 100) {
                        element.value = 100
                    }
                } catch (error) {
                    console.log(error);
                }
            }
        </script>

