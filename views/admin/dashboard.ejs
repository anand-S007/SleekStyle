        <main class="main-wrap">
            <!-----------Nav bar included ------------------------->
            <%-include('navbar')-%>

                <section class="content-main">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Dashboard </h2>
                            <p>Whole data about your business here</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="card card-body mb-4">
                                <article class="icontext">
                                    <span class="icon icon-sm rounded-circle bg-primary-light"><i
                                            class="text-primary material-icons md-monetization_on"></i></span>
                                    <div class="text">
                                        <h6 class="mb-1 card-title">Revenue</h6>
                                        <span>Rs <%=totalRevenue %></span>
                                        <span class="text-sm">
                                            Shipping fees are not included
                                        </span>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card card-body mb-4">
                                <article class="icontext">
                                    <span class="icon icon-sm rounded-circle bg-primary-light"><i
                                            class="text-primary material-icons md-monetization_on"></i></span>
                                    <div class="text">
                                        <h6 class="mb-1 card-title">Monthly revenue</h6>
                                        <span>Rs <%=avgMonthRevenue %></span>
                                        <span class="text-sm">
                                            On basis of average sales <br>
                                            Shipping fees not included
                                        </span>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card card-body mb-4">
                                <article class="icontext">
                                    <span class="icon icon-sm rounded-circle bg-success-light"><i
                                            class="text-success material-icons md-local_shipping"></i></span>
                                    <div class="text">
                                        <h6 class="mb-1 card-title">Orders</h6> <span>
                                            <%=totalOrders %>
                                        </span>
                                        <span class="text-sm">
                                            Excluding orders in transit
                                        </span>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card card-body mb-4">
                                <article class="icontext">
                                    <span class="icon icon-sm rounded-circle bg-warning-light"><i
                                            class="text-warning material-icons md-qr_code"></i></span>
                                    <div class="text">
                                        <h6 class="mb-1 card-title">Products</h6> <span>
                                            <%=totalProducts %>
                                        </span>
                                        <span class="text-sm">
                                            In 5 Categories
                                        </span>
                                    </div>
                                </article>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-xl-8 col-lg-12">
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">Monthly sale statistics</h5>
                                    <canvas id="monthlyChart" height="120px"></canvas>
                                    <h5 class="card-title">Yearly sale statistics</h5>
                                    <canvas id="yearlyChart" height="120px"></canvas>
                                </article>
                            </div>
                            <!-- <div class="row">
                                <div class="col-lg-5">
                                    <div class="card mb-4">
                                        <article class="card-body">
                                            <h5 class="card-title">New Members</h5>
                                            <div class="new-member-list">
                                                <% newUsers.forEach((data)=>{ %>
                                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                                        <div class="d-flex align-items-center">
                                                            <img src="/public/adminAssets/assets/imgs/people/avatar4.jpg"
                                                                alt="" class="avatar">
                                                            <div>
                                                                <h6>
                                                                    <%=data.firstname %>
                                                                </h6>
                                                                <p class="text-muted font-xs">
                                                                    <%=data.email %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                            </div>

                                        </article>
                                    </div>
                                </div>
                            </div> -->
                        </div>
                        <div class="col-xl-4 col-lg-12">
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">Top categories</h5>
                                    <canvas id="myChart2" height="217"></canvas>
                                </article>
                            </div>
                                <div class="card mb-4">
                                    <article class="card-body">
                                        <h5 class="card-title">New Members</h5>
                                        <div class="new-member-list">
                                            <% newUsers.forEach((data)=>{ %>
                                                <div class="d-flex align-items-center justify-content-between mb-4">
                                                    <div class="d-flex align-items-center">
                                                        <div>
                                                            <h6>
                                                                <%=data.firstname %>
                                                            </h6>
                                                            <p class="text-muted font-xs">
                                                                <%=data.email %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>

                                    </article>
                                </div>
                        </div>
                    </div>

                    <!-----Top products----->
                    <div class="card mb-4">
                        <header class="card-header">
                            <h4 class="card-title">Top 5 selling products</h4>
                        </header>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="table-responsive">
                                    <table class="table align-middle table-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="align-middle" scope="col">Image</th>
                                                <th class="align-middle" scope="col">Name</th>
                                                <th class="align-middle" scope="col">Category</th>
                                                <th class="align-middle" scope="col">Total revenue</th>
                                                <th class="align-middle" scope="col">Total orders</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% topProducts.forEach((data)=>{ %>
                                                <tr>
                                                    <td><a href="#" class="fw-bold"><img src="/uploads/<%=data.productDetails[0].image[0] %>"
                                                        class="img-sm img-thumbnail" alt="Item"></a> </td>
                                                    <td  style="vertical-align: middle;"><%=data.productDetails[0].title %></td>
                                                    <td  style="vertical-align: middle;"><%=data.category %></td>
                                                    <td style="vertical-align: middle;">
                                                        Rs <%=data.revenue %>
                                                    </td>
                                                    <td style="vertical-align: middle;"> <%=data.count %></td>
                                                </tr>
                                                <% }) %>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- table-responsive end// -->
                        </div>
                    </div>

                    <!---Latest orders -->
                    <div class="card mb-4">
                        <header class="card-header">
                            <h4 class="card-title">Latest orders</h4>
                        </header>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="table-responsive">
                                    <table class="table align-middle table-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="align-middle" scope="col">Order ID</th>
                                                <th class="align-middle" scope="col">Billing Name</th>
                                                <th class="align-middle" scope="col">Date</th>
                                                <th class="align-middle" scope="col">Total</th>
                                                <th class="align-middle" scope="col">Payment Status</th>
                                                <th class="align-middle" scope="col">Payment Method</th>
                                                <th class="align-middle" scope="col">Order status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% latestOrders.forEach((data)=>{ %>
                                                <tr>
                                                    <td><a href="#" class="fw-bold"><%=data.orders.orderId %></a> </td>
                                                    <td><%=data.orders.address.name %></td>
                                                    <td>
                                                        <%=new Date(data.orders.createdAt).toLocaleDateString() %>
                                                    </td>
                                                    <td>
                                                        Rs <%=data.orders.totalPrice %>
                                                    </td>
                                                    <td>
                                                        <% if(data.orders.paymentStatus == 'successfull'){ %>
                                                            <span class="badge badge-pill badge-soft-success">Paid</span>
                                                            <% }else{ %>
                                                                <span class="badge badge-pill badge-soft-danger"><%=data.orders.paymentStatus %></span>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <% if(data.orders.paymentMethod == 'cod'){ %>
                                                            Cash on delivery
                                                            <% }else{ %>
                                                                <i class="material-icons md-payment font-xxl text-muted mr-5"></i>
                                                                Razorpay
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <% if(data.orders.status == 'Delivered'){ %>
                                                            <span class="badge badge-pill badge-soft-success">Delivered</span>
                                                            <% }else{ %>
                                                                <span class="badge badge-pill badge-soft-danger"><%=data.orders.status %></span>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- table-responsive end// -->
                        </div>
                    </div>
                </section> <!-- content-main end// -->
                <footer class="main-footer font-xs">
                    <div class="row pb-30 pt-15">
                        <div class="col-sm-6">
                            <script>
                                document.write(new Date().getFullYear())
                            </script> ©, Sleek style mens fashion store
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end">
                                All rights reserved
                            </div>
                        </div>
                    </div>
                </footer>
        </main>

